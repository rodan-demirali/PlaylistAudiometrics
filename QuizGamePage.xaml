<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlaylistAudiometrics.QuizGamePage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#121212"
             Title="QuizGamePage">

    <Grid Padding="20"
          VerticalOptions="Center"
          HorizontalOptions="FillAndExpand">

        <VerticalStackLayout x:Name="GameScreen"
                             Spacing="30"
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="Center">

            <VerticalStackLayout Spacing="20"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">

                <Label x:Name="lblDurum" 
                       Text="✅ 0 | ❌ 0 | ⏭️ 0"
                       FontSize="16"
                       TextColor="#BBBBBB" />

                <Label Text="🏁 Round 7 / 10"
                       x:Name="lblRound"
                       FontSize="18"
                       TextColor="#BBBBBB" />

                <Label Text="Guess the Album Art"
                       x:Name="lblGuessHeading"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White" />

                <Frame CornerRadius="12"
                       Padding="6,2"
                       BackgroundColor="#1E1E1E"
                       HasShadow="False">
                    <Label Text="⏱ 999"
                           x:Name="lblTimeLeft"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#3E8EDE" />
                </Frame>
            </VerticalStackLayout>

            <Frame x:Name="TrackInfoBox"
       IsVisible="False"
       BackgroundColor="#1E1E1E"
       CornerRadius="16"
       Padding="20"
       HasShadow="True"
       BorderColor="#3E8EDE"
       HorizontalOptions="Center"
       MaximumWidthRequest="350">

                <VerticalStackLayout Spacing="15">

                    <Label Text="📝 Track"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="#3E8EDE"
               HorizontalOptions="Center" />

                    <BoxView HeightRequest="1"
                 BackgroundColor="#3E8EDE"
                 Opacity="0.3"
                 Margin="0,0,0,10" />

                    <HorizontalStackLayout Spacing="15" VerticalOptions="Center">

                        <Frame CornerRadius="12"
                   Padding="0"
                   HasShadow="False"
                   WidthRequest="100"
                   HeightRequest="100"
                   VerticalOptions="Center">
                            <Image x:Name="imgTrackCover"
                       Aspect="AspectFill"
                       WidthRequest="100"
                       HeightRequest="100" />
                        </Frame>

                        <VerticalStackLayout Spacing="6"
                                 VerticalOptions="Center"
                                 HorizontalOptions="StartAndExpand">

                            <HorizontalStackLayout Spacing="6">
                                <Label Text="🎵"
                           FontSize="14"
                           VerticalOptions="Center" />
                                <Label x:Name="lblTrackName"
                           Text="Track Name"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           LineBreakMode="TailTruncation"
                           MaxLines="2" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="6">
                                <Label Text="💿"
                           FontSize="14"
                           VerticalOptions="Center" />
                                <Label x:Name="lblAlbumName"
                           Text="Album Name"
                           FontSize="14"
                           TextColor="#BBBBBB"
                           LineBreakMode="TailTruncation"
                           MaxLines="1" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="6">
                                <Label Text="👤"
                           FontSize="14"
                           VerticalOptions="Center" />
                                <Label x:Name="lblArtistName"
                           Text="Artist Name"
                           FontSize="14"
                           TextColor="#BBBBBB"
                           LineBreakMode="TailTruncation"
                           MaxLines="1" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>

                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>


            <Grid x:Name="OptionsGrid"
                  RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,*"
                  RowSpacing="12"
                  ColumnSpacing="12"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="Center">

                <Button Grid.Row="0" Grid.Column="0"
                        Text="Option A"
                        x:Name="BtnOption1"
                        Clicked="BtnOptions_Clicked"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#3E8EDE"
                        BorderColor="#134AB0"
                        CornerRadius="16"
                        HeightRequest="65"
                        LineBreakMode="WordWrap"
                        Padding="10,0"
                        HorizontalOptions="FillAndExpand" />

                <Button Grid.Row="0" Grid.Column="1"
                        Text="Option B"
                        x:Name="BtnOption2"
                        Clicked="BtnOptions_Clicked"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#3E8EDE"
                        BorderColor="#134AB0"
                        CornerRadius="16"
                        HeightRequest="65"
                        LineBreakMode="WordWrap"
                        Padding="10,0"
                        HorizontalOptions="FillAndExpand" />

                <Button Grid.Row="1" Grid.Column="0"
                        Text="Option C"
                        x:Name="BtnOption3"
                        Clicked="BtnOptions_Clicked"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#3E8EDE"
                        BorderColor="#134AB0"
                        CornerRadius="16"
                        HeightRequest="65"
                        LineBreakMode="WordWrap"
                        Padding="10,0"
                        HorizontalOptions="FillAndExpand" />

                <Button Grid.Row="1" Grid.Column="1"
                        Text="Option D"
                        x:Name="BtnOption4"
                        Clicked="BtnOptions_Clicked"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#3E8EDE"
                        BorderColor="#134AB0"
                        CornerRadius="16"
                        HeightRequest="65"
                        LineBreakMode="WordWrap"
                        Padding="10,0"
                        HorizontalOptions="FillAndExpand" />
            </Grid>
        </VerticalStackLayout>

        <VerticalStackLayout x:Name="GameOverScreen"
                             Spacing="30"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             IsVisible="False">

            <Label Text="🎮 GAME OVER"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="20"
                   Padding="30"
                   HasShadow="False"
                   BorderColor="#3E8EDE"
                   HorizontalOptions="Center">

                <VerticalStackLayout Spacing="15">

                    <Label x:Name="lblGameOverScore"
                           Text="Score: 85.5%"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#3E8EDE"
                           HorizontalOptions="Center" />

                    <BoxView HeightRequest="2"
                             BackgroundColor="#3E8EDE"
                             Opacity="0.3"
                             Margin="0,5" />

                    <Label x:Name="lblGameOverCorrect"
                           Text="✅ Correct: 10"
                           FontSize="20"
                           TextColor="#4CAF50"
                           HorizontalOptions="Center" />

                    <Label x:Name="lblGameOverWrong"
                           Text="❌ Wrong: 2"
                           FontSize="20"
                           TextColor="#F44336"
                           HorizontalOptions="Center" />

                    <Label x:Name="lblGameOverEmpty"
                           Text="⏭️ Skipped: 1"
                           FontSize="20"
                           TextColor="#FFC107"
                           HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout Spacing="15"
                                 WidthRequest="280">

                <Button Text="Play Again"
                        x:Name="BtnPlayAgain"
                        Clicked="BtnPlayAgain_Clicked"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#4CAF50"
                        CornerRadius="16"
                        HeightRequest="55" />

                <Button Text="Return to Menu"
                        x:Name="BtnReturnMenu"
                        Clicked="BtnReturnMenu_Clicked"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#3E8EDE"
                        CornerRadius="16"
                        HeightRequest="55" />

            </VerticalStackLayout>

        </VerticalStackLayout>

    </Grid>
</ContentPage>