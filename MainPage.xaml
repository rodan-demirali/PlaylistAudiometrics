<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlaylistAudiometrics.MainPage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="30,20" Spacing="25">

            <Label Text="Spotify Playlist Audiometrics"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#3E8EDE"
                   HorizontalOptions="Center" />

            <Label Text="Enter Playlist Link Below."
                   TextColor="White"
                   HorizontalOptions="Center" />

            <Entry x:Name="txtBoxPlaylistLink"
                   Placeholder="Paste your playlist link here"
                   PlaceholderColor="#888"
                   TextColor="White"
                   BackgroundColor="#1E1E1E" />

            <Button x:Name="btnConfirm"
                    Text="Confirm"
                    BackgroundColor="#3E8EDE"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="btnConfirm_Clicked" />

            <Label Text="Or choose a special editors pick playlist below"
                   TextColor="#BBBBBB"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

            <Label Text="80's Rock Playlists"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

            <!-- Playlist Kutuları (4 Tane) - Grid ile eşit genişlik -->
            <Grid ColumnSpacing="10" RowSpacing="5" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Playlist 1 -->
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="OnPlaylistTapped"
                            CommandParameter="https://open.spotify.com/playlist/2Rkn68Zm0dWul8i460a7zj?si=ee436fec38554029" />
                    </VerticalStackLayout.GestureRecognizers>

                    <Image Source="eightysrocka.jpg"
                           Aspect="AspectFill"
                           HeightRequest="80" />
                    <Label Text="Rock 80s"
                           TextColor="White"
                           FontSize="12"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- Playlist 2 -->
                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="OnPlaylistTapped"
                            CommandParameter="https://open.spotify.com/playlist/5oM9tyhspzK18TrPrlIZro?si=43891ce297c6437a" />
                    </VerticalStackLayout.GestureRecognizers>

                    <Image Source="eightysrockb.jpg"
                           Aspect="AspectFill"
                           HeightRequest="80" />
                    <Label Text="80s Hit Rock"
                           TextColor="White"
                           FontSize="12"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- Playlist 3 -->
                <VerticalStackLayout Grid.Column="2" Spacing="5">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="OnPlaylistTapped"
                            CommandParameter="https://open.spotify.com/playlist/29dTrOurPDrMcrnio2q6hZ?si=a39ddcd74eda4bc5" />
                    </VerticalStackLayout.GestureRecognizers>

                    <Image Source="eightysrockc.jpg"
                           Aspect="AspectFill"
                           HeightRequest="80" />
                    <Label Text="Classic 80's"
                           TextColor="White"
                           FontSize="12"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- Playlist 4 -->
                <VerticalStackLayout Grid.Column="3" Spacing="5">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="OnPlaylistTapped"
                            CommandParameter="https://open.spotify.com/playlist/3sTZTkIGgm8wJiSXDvpApF?si=496e7ed0170c472c" />
                    </VerticalStackLayout.GestureRecognizers>

                    <Image Source="eightysrockd.jpg"
                           Aspect="AspectFill"
                           HeightRequest="80" />
                    <Label Text="70s 80s 90s"
                           TextColor="White"
                           FontSize="12"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>