<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlaylistAudiometrics.PAinfo"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Title="PAinfo">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f5f7fa" Offset="0.0" />
            <GradientStop Color="#f3d4a1" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                    <Label Text="Playlist Info"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="#222" />
                    <Label Text="select a track to view it's information."
                           FontSize="15"
                           FontAttributes="Italic"
                           TextColor="#555" />
                </VerticalStackLayout>

                <Frame CornerRadius="12"
                       Padding="15"
                       BackgroundColor="White"
                       HasShadow="True"
                       HeightRequest="800">
                    <ScrollView>
                        <VerticalStackLayout Spacing="15">

                            <VerticalStackLayout Spacing="6" Padding="0,0,0,15">
                                <Label x:Name="lblPlaylistName"
                                       Text="Playlist Name"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#223366"
                                       HorizontalOptions="Center" />
                                <Label x:Name="lblPlaylistDescription"
                                       Text="Playlist description goes here..."
                                       FontSize="14"
                                       TextColor="#666"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>

                            <CollectionView x:Name="cvTracks" ItemsLayout="VerticalList" SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame CornerRadius="10"
                                               Padding="10"
                                               Margin="0,0,0,10"
                                               BackgroundColor="#fafafa"
                                               BorderColor="#eee"
                                               HasShadow="False">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnTrackTapped" />
                                            </Frame.GestureRecognizers>
                                            <Grid ColumnDefinitions="60,*" ColumnSpacing="15">
                                                <Image Grid.Column="0"
                                                       Source="{Binding ImageUrl}"
                                                       WidthRequest="60"
                                                       HeightRequest="60"
                                                       Aspect="AspectFill"
                                                       VerticalOptions="Start">
                                                    <Image.Clip>
                                                        <RoundRectangleGeometry CornerRadius="8"
                                                                                Rect="0,0,60,60"/>
                                                    </Image.Clip>
                                                </Image>

                                                <VerticalStackLayout Grid.Column="1" 
                                                                     Spacing="2"
                                                                     VerticalOptions="Center">
                                                    <Label Text="{Binding TrackName}"
                                                           FontSize="16"
                                                           FontAttributes="Bold"
                                                           TextColor="#222"
                                                           LineBreakMode="WordWrap"
                                                           MaxLines="3" />
                                                    <Label Text="{Binding AlbumName}"
                                                           FontSize="14"
                                                           TextColor="#555"
                                                           LineBreakMode="WordWrap"
                                                           MaxLines="2" />
                                                    <Label Text="{Binding ArtistName}"
                                                           FontSize="13"
                                                           TextColor="#777"
                                                           LineBreakMode="WordWrap"
                                                           MaxLines="1" />
                                                </VerticalStackLayout>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <Grid x:Name="loadingOverlay"
              IsVisible="False"
              BackgroundColor="#80000000"   
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">

            <Frame CornerRadius="12"
                   Padding="18"
                   WidthRequest="320"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   BackgroundColor="White">
                <VerticalStackLayout Spacing="12" HorizontalOptions="FillAndExpand">
                    <ActivityIndicator x:Name="aiLoading" IsRunning="True" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center" Color="Black" />
                    <Label Text="YÃ¼kleniyor..." FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black" />
                    <ProgressBar x:Name="pbLoading" Progress="0" HeightRequest="6" HorizontalOptions="FillAndExpand" BackgroundColor="Gray" />
                    <Label x:Name="lblProgressPercent" Text="0%" HorizontalOptions="Center" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <Grid x:Name="trackDetailsOverlay"
              IsVisible="False"
              BackgroundColor="#CC000000"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand"
              Padding="20">

            <Frame CornerRadius="16"
                   Padding="0"
                   HasShadow="True"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   BackgroundColor="White">

                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0" 
                          Padding="20,15"
                          BackgroundColor="#223366">
                        <Label Text="Song Info" 
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"
                               HorizontalOptions="Start" />
                        <Button Text="âœ•"
                                x:Name="btnCloseDetails"
                                Clicked="OnCloseDetailsTapped"
                                FontSize="24"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="20"
                                HorizontalOptions="End"
                                VerticalOptions="Center" />
                    </Grid>

                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="9" Padding="9">

                            <Frame CornerRadius="10"
                                   Padding="5"
                                   BackgroundColor="#f0f4f8"
                                   HasShadow="False"
                                   BorderColor="#d0d8e0">
                                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                                    <Button Text="Log in"
                                            FontSize="14"
                                            Padding="8,4"
                                            CornerRadius="6"
                                            BackgroundColor="#223366"
                                            TextColor="White" />
                                    <Label Text="to configure song infos."
                                           FontSize="14"
                                           TextColor="#555"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Frame>

                            <Label Text="ðŸŽµ Song Info"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#223366" />

                            <Frame CornerRadius="12"
                                   Padding="15"
                                   BackgroundColor="#fafafa"
                                   HasShadow="False"
                                   BorderColor="#e0e0e0">
                                <VerticalStackLayout Spacing="15">
                                    <Grid ColumnDefinitions="100,*" ColumnSpacing="15">
                                        <Image Grid.Column="0"
                                               x:Name="imgDetailsCover"
                                               WidthRequest="100"
                                               HeightRequest="100"
                                               Aspect="AspectFill">
                                            <Image.Clip>
                                                <RoundRectangleGeometry CornerRadius="10" Rect="0,0,100,100"/>
                                            </Image.Clip>
                                        </Image>

                                        <VerticalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                            <Label x:Name="lblDetailsTrackName"
                                                   Text="Song Name"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="#222"
                                                   LineBreakMode="WordWrap" />
                                            <Label x:Name="lblDetailsAlbumName"
                                                   Text="Album Name"
                                                   FontSize="15"
                                                   TextColor="#555"
                                                   LineBreakMode="WordWrap" />
                                            <Label x:Name="lblDetailsArtistName"
                                                   Text="Artist Name"
                                                   FontSize="14"
                                                   TextColor="#777"
                                                   LineBreakMode="WordWrap" />
                                        </VerticalStackLayout>
                                    </Grid>

                                    <BoxView HeightRequest="1" Color="#e0e0e0" />
                                    <Label x:Name="lblSongDescription"
                                           Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris."
                                           FontSize="14"
                                           TextColor="#444"
                                           LineBreakMode="WordWrap" />
                                </VerticalStackLayout>
                            </Frame>

                            <Label Text="ðŸ’¬ User Comments &amp; Ratings"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#223366"
                                   Margin="0,10,0,0" />

                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5" HeightRequest="90">
                                <Button Grid.Column="0"
                                        Text="âž• Share Your Comment"
                                        FontSize="14"
                                        CornerRadius="8"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        HeightRequest="60"
                                        HorizontalOptions="FillAndExpand" />

                                <Frame Grid.Column="1"
                                       CornerRadius="8"
                                       BackgroundColor="#f0f4f8"
                                       HasShadow="False"
                                       HeightRequest="90"
                                       BorderColor="#d0d8e0">
                                    <VerticalStackLayout HorizontalOptions="Start">
                                        <Label Text="Order By"
                                               FontSize="12"
                                               TextColor="#666"
                                               HorizontalOptions="Center" />
                                        <Picker x:Name="pickerOrderBy"
                                                FontSize="13"
                                                TextColor="#223366"
                                                SelectedIndexChanged="OnOrderByChanged">
                                            <Picker.Items>
                                                <x:String>Most Popular</x:String>
                                                <x:String>Newest</x:String>
                                            </Picker.Items>
                                        </Picker>
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>

                            <VerticalStackLayout x:Name="commentsContainer" Spacing="15">
                                <Frame CornerRadius="12"
                                       Padding="3"
                                       BackgroundColor="White"
                                       HasShadow="True"
                                       BorderColor="#e0e0e0">
                                    <Grid ColumnDefinitions="50,*" ColumnSpacing="12">
                                        <Image Grid.Column="0"
                                               Source="https://via.placeholder.com/50"
                                               WidthRequest="50"
                                               HeightRequest="50"
                                               Aspect="AspectFill"
                                               VerticalOptions="Start">
                                            <Image.Clip>
                                                <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                                            </Image.Clip>
                                        </Image>

                                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="Username"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#222" />
                                                <Label Text="â­â­â­â­â­"
                                                       FontSize="14"
                                                       TextColor="#FFB800" />
                                                <Label Text="2 days ago"
                                                       FontSize="12"
                                                       TextColor="#999"
                                                       HorizontalOptions="EndAndExpand" />
                                            </HorizontalStackLayout>

                                            <Label Text="This is a sample comment text. The song is amazing and I really enjoyed listening to it!"
                                                   FontSize="14"
                                                   TextColor="#444"
                                                   LineBreakMode="WordWrap" />

                                            <Label Text="â¤ï¸ 42 likes"
                                                   FontSize="13"
                                                   TextColor="#e74c3c"
                                                   FontAttributes="Bold" />
                                        </VerticalStackLayout>
                                    </Grid>
                                </Frame>

                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Frame>
        </Grid>

    </Grid>


</ContentPage>